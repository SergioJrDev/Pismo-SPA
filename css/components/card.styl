.card {
    margin-bottom: 20px;
    border: 1px solid #4f4f4f;
    padding: 20px;
    @media (min-width: xs) {
        & {
            display: flex;
            figure {
                width: 400px;
                margin-right: 15px;
            }
        }
    }
    figure {
        img {
            width: 100%;
        }
    }
    &_content {
        width: 100%;
    }
    p, h2 {
        color: #aaa;
        margin-bottom: 15px;
    }
    .descr {
        font-weight: bold;
        color: #616161;
    }  
    &_favorite {
        background: var(--color_black)
        padding: 15px;
        margin-bottom: 15px;
        h2 {
            color: #aaa;
            font-size: 1rem;
            margin-bottom: 15px;
        }
    }
}