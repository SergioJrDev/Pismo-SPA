.form, form {
    width: 100%;
    max-width: 400px;
    margin: auto;
    padding: 25px;
    border: 1px solid #d1d1d1;
    border-radius: 3px;
    background: rgba(255, 255, 255, 0.88);
	.input-group {
		margin-bottom: 15px;
	}
	.label, label {
		display: inline-block;
		font-size: 1rem;
		color: #636363;
		vertical-align: top;
	}
	.input, input, select {
		display: block;
		width: 100%;
		padding: 9px 5px;
		border: 1px solid #d0d0d0;
		border-radius: 2px;
		background: #fff;
		font-size: 18px;
		/*margin-bottom: 20px;*/
	}

} 
