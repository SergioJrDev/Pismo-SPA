/* Grids */
xs-grid(x) {
	for n in (1..x) {
		.xs-{n}-{x} {
			width ((0% + n / x * 100));
		}
	}
}

sm-grid(x) {
	for n in (1..x) {
		.sm-{n}-{x} {
			padding: 0 15px;
			width ((0% + n / x * 100));
		}
	}
}

