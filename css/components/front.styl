.search-section {
    background-image: url('/img/background.jpg');
}

.results-section {
    background: var(--color_p)
}

footer {
    background: var(--color_dark);
    padding: 20px 0;
    text-align: center;
    p {
        color: #aaa;
    }
}

.card {
    margin-bottom: 20px;
    border: 1px solid #4f4f4f;
    padding: 20px;
    @media (min-width: xs) {
        & {
            display: flex;
            figure {
                width: 400px;
                margin-right: 15px;
            }
        }
    }
    figure {
        img {
            width: 100%;
        }
    }
    &_content {
        width: 100%;
    }
    p, h2 {
        color: #aaa;
        margin-bottom: 15px;
    }
    .descr {
        font-weight: bold;
        color: #616161;
    }
    &_favorite {
        background: var(--color_black)
        padding: 15px;
        margin-bottom: 15px;
        h2 {
            color: #aaa;
            font-size: 1rem;
            margin-bottom: 15px;
        }
    }
}

.page-title {
    color: #fff;
    background: var(--color_dark);
    display: inline-block;
    padding: 0 10px;
    border-left: 3px solid var(--color_theme);
    font-weight: lighter;
}