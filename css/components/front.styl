.search-section {
    background-image: url('/img/background.jpg');
}

.results-section {
    background: var(--color_p)
}

footer {
    background: var(--color_dark);
    padding: 20px 0;
    text-align: center;
    p {
        color: #aaa;
    }
}

.card {
    margin-bottom: 20px;
    border: 1px solid #4f4f4f;
    padding: 20px;
    display: flex;
    figure {
        width: 50%;
    }
    &_content {
        width: 100%;
    }
    p, h2 {
        color: #aaa;
        margin-bottom: 15px;
    }
    .descr {
        font-weight: normal;
        color: #ffffff;
    }
    &_favorite {
        background: var(--color_dark)
        padding: 15px;
        margin-bottom: 15px;
        h2 {
            color: #aaa;
            font-size: 1rem;
        }
    }
}

