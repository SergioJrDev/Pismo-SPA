header {
    background: var(--color_dark);
    padding: 15px 0;  
    position: fixed;
    width: 100%;
    z-index: 1; 
    top: 0;
    h1 {
        color: var(--color_theme)
    }
    @media (min-width: xs) {
        & {
            .container {
                display: flex;
                align-items: center;
                justify-content: space-between;
            }
        }
    }
    nav {
        text-align: center;
        a {
            margin-left: 10px;
            padding: 10px;
            color: #fff;
            padding: 5px;
            border-radius: 5px;
        }
    }
}  

.fix-header {
    margin-top: 100px;
    @media (min-width: xs) {
        & {
            margin-top: 80px;
        }
    }
}